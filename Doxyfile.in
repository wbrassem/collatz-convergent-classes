# ---------------------------------------------------------------------------
# Doxyfile.in â€” Modernized for MathJax + HTML-only output
# ---------------------------------------------------------------------------

# Project info
PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_NUMBER         = "@PROJECT_VERSION@"

# Input
INPUT                  = @CMAKE_SOURCE_DIR@/src/cpp
FILE_PATTERNS          = *.cpp *.hpp
RECURSIVE              = YES

# ---------------------------------------------------------------------------
# Output configuration (clean /build/doxygen/html layout)
# ---------------------------------------------------------------------------

# Root output directory (Doxygen will create html/ under this)
OUTPUT_DIRECTORY       = @CMAKE_BINARY_DIR@/doxygen

# Place HTML under build/doxygen/html
GENERATE_HTML          = YES
HTML_OUTPUT            = html

# Disable LaTeX/PDF output entirely
GENERATE_LATEX         = NO

# ---------------------------------------------------------------------------
# MathJax (for Markdown + formulas)
# ---------------------------------------------------------------------------

USE_MATHJAX            = YES
MATHJAX_RELPATH        = ../../../third_party/MathJax-2.7.9
MATHJAX_EXTENSIONS     =
#MATHJAX_CODEFILE       = tex-chtml.js
MATHJAX_CODEFILE       =

# ---------------------------------------------------------------------------
# Source browsing
# ---------------------------------------------------------------------------

SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES
CALL_GRAPH             = NO
CALLER_GRAPH           = NO

# ---------------------------------------------------------------------------
# Documentation extraction
# ---------------------------------------------------------------------------

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_METHODS  = YES

# ---------------------------------------------------------------------------
# Warnings
# ---------------------------------------------------------------------------

WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_IF_DOC_ERROR      = YES

# ---------------------------------------------------------------------------
# Diagrams
# ---------------------------------------------------------------------------

HAVE_DOT               = YES
CLASS_GRAPH            = YES
CALL_GRAPH             = NO
CALLER_GRAPH           = NO

# ---------------------------------------------------------------------------
# Markdown + HTML enhancements
# ---------------------------------------------------------------------------

MARKDOWN_SUPPORT       = YES
AUTOLINK_SUPPORT       = YES

GENERATE_TREEVIEW      = YES
HTML_DYNAMIC_SECTIONS  = YES

QUIET                  = NO
